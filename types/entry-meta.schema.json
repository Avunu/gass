{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/Avunu/gass/schemas/entry-meta.schema.json",
  "title": "Entry Metadata Schema",
  "description": "JSON Schema for defining Entry type metadata in GASS (Google Apps Script Sheets ORM)",
  "type": "object",
  "required": ["sheetId", "columns", "headerRow", "dataStartColumn", "dataEndColumn"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference for IDE support"
    },
    "@context": {
      "type": "object",
      "description": "JSON-LD context for defining vocabulary and semantic relationships",
      "properties": {
        "@vocab": {
          "type": "string",
          "format": "uri",
          "description": "Default vocabulary URI"
        }
      },
      "additionalProperties": true
    },
    "sheetId": {
      "type": "integer",
      "description": "The unique identifier of the Google Sheet",
      "minimum": 0
    },
    "columns": {
      "type": "array",
      "description": "Ordered list of column names that map to Entry properties",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "headerRow": {
      "type": "integer",
      "description": "The row number containing column headers (1-indexed)",
      "minimum": 1,
      "default": 1
    },
    "dataStartColumn": {
      "type": "integer",
      "description": "The first column containing data (1-indexed)",
      "minimum": 1,
      "default": 1
    },
    "dataEndColumn": {
      "type": "integer",
      "description": "The last column containing data (1-indexed)",
      "minimum": 1
    },
    "defaultSort": {
      "type": "array",
      "description": "Default sorting configuration for the sheet",
      "items": {
        "type": "object",
        "required": ["column", "ascending"],
        "properties": {
          "column": {
            "type": "string",
            "description": "Column name to sort by (must be in columns array)"
          },
          "ascending": {
            "type": "boolean",
            "description": "Sort in ascending order if true, descending if false"
          }
        },
        "additionalProperties": false
      }
    },
    "filterRow": {
      "type": "integer",
      "description": "The row number used for smart filtering (1-indexed)",
      "minimum": 1
    },
    "filterRange": {
      "type": "object",
      "description": "The column range used for smart filtering",
      "required": ["startColumn", "endColumn"],
      "properties": {
        "startColumn": {
          "type": "integer",
          "description": "First column of filter range (1-indexed)",
          "minimum": 1
        },
        "endColumn": {
          "type": "integer",
          "description": "Last column of filter range (1-indexed)",
          "minimum": 1
        }
      },
      "additionalProperties": false
    },
    "clearFiltersCell": {
      "type": "object",
      "description": "Cell location for the clear filters button",
      "required": ["row", "column"],
      "properties": {
        "row": {
          "type": "integer",
          "description": "Row number of the clear filters cell (1-indexed)",
          "minimum": 1
        },
        "column": {
          "type": "integer",
          "description": "Column number of the clear filters cell (1-indexed)",
          "minimum": 1
        }
      },
      "additionalProperties": false
    },
    "fields": {
      "type": "object",
      "description": "Field definitions with validation rules using JSON Schema",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "type": "object",
          "description": "Field validation schema",
          "properties": {
            "type": {
              "oneOf": [
                {
                  "type": "string",
                  "enum": ["string", "number", "integer", "boolean", "null", "array", "object"]
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["string", "number", "integer", "boolean", "null", "array", "object"]
                  },
                  "minItems": 1,
                  "uniqueItems": true
                }
              ],
              "description": "Data type of the field (can be a single type or array of types)"
            },
            "format": {
              "type": "string",
              "description": "Format specification (e.g., 'email', 'date', 'date-time', 'uri')"
            },
            "required": {
              "type": "boolean",
              "description": "Whether this field is required",
              "default": false
            },
            "minLength": {
              "type": "integer",
              "minimum": 0,
              "description": "Minimum length for string fields"
            },
            "maxLength": {
              "type": "integer",
              "minimum": 0,
              "description": "Maximum length for string fields"
            },
            "minimum": {
              "type": "number",
              "description": "Minimum value for numeric fields"
            },
            "maximum": {
              "type": "number",
              "description": "Maximum value for numeric fields"
            },
            "pattern": {
              "type": "string",
              "description": "Regular expression pattern for string validation"
            },
            "enum": {
              "type": "array",
              "description": "Allowed values for this field",
              "minItems": 1
            },
            "default": {
              "description": "Default value for this field"
            },
            "description": {
              "type": "string",
              "description": "Human-readable description of the field"
            },
            "@type": {
              "type": "string",
              "enum": ["Link", "LinkArray"],
              "description": "JSON-LD type indicating this field is a relationship to another Entry type"
            },
            "@id": {
              "type": "string",
              "description": "JSON-LD identifier - the target Entry class name (e.g., 'Service', 'Region')"
            },
            "targetField": {
              "type": "string",
              "description": "The field name on the target Entry to match against (defaults to 'name')",
              "default": "name"
            },
            "separator": {
              "type": "string",
              "description": "Separator for LinkArray types (defaults to ',')",
              "default": ","
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
